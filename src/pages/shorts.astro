---
import PageLayout from "@/layouts/Base";
import { Image } from "@astrojs/image/components";
import fastfoodGif from "../assets/fast-food.gif";
import pruViz from "../assets/pru-viz.png";

---

<PageLayout meta={{ title: "Shorts" }}>
	<section>
		<h1 class="title mb-3">Shorts</h1>
		<p class="mb-4">
			This section contains snippets from my latest work that I think are entertaining and/or eye-catching!
		</p>
        
        <h3 class="title text-lg mb-3">Fast Food Chain Locations</h3>
        <Image 
            src={fastfoodGif}
            alt="Fast Food Malaysia Counts 2022"
            class="mb-3"
            format="webp"
        />

        <p class="mb-3">
            Interested in the actual data? Check out my blog post <a href="/posts/fast-food" target="_blank" class="font-bold text-cyan-500">here</a>.
            Discuss at <a href="https://www.reddit.com/r/malaysia/comments/zxd3mx/fast_food_outlets_counts_end_2022/" target="_blank" class="font-bold text-red-500">r/Malaysia</a>
        </p>
        
        <h3 class="title text-lg mb-3">Election Dashboard</h3>
        <Image 
            src={pruViz}
            alt="Fast Food Malaysia Counts 2022"
            class="mb-3"
            format="webp"
        />

        <p>
            Built with Streamlit & some Bootstrap components. Features interactive cross-filtering & pagination.
            Deployed and hosted on <a href="https://pru-viz.streamlit.app" target="_blank" class="font-bold text-cyan-500">Streamlit Cloud</a>
        </p>

    </section>
</PageLayout>
